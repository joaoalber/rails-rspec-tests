<% if @accessory.errors.any? %>
    <p>Você deve corrigir os seguintes erros para continuar:</p>
    <% @accessory.errors.full_messages.each do |message| %>
        <div class="alert alert-danger" role="alert"><%= message %></div>
    <% end %>
<% end %>

<%= form_with model: @accessory, local: true do |f| %>
    <div class="form-row">
        <div class="form-group col-md-6">
            <%= f.label :name, 'Nome' %>
						<%= f.text_field :name, class: "col" %>
        </div>
        <div class="form-group col-md-6">
          <%= f.label :description, 'Descrição' %>
					<%= f.text_field :description, class: "col" %>
        </div>
        <div class="form-group col-md-6">
          <%= f.label :daily_rate, 'Diária' %>
					<%= f.text_field :daily_rate, class: "col" %>
        </div>
				<div class="form-group col-md-6">
          <%= f.label :image, 'Foto' %>
					<%= f.file_field :image, class: "col" %>
        </div>
    </div>
    <%= f.submit 'Enviar', class: "btn btn-primary mt-3 float-right" %>
<% end %>