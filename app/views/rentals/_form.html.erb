<% if @rental.errors.any? %>
    <p>VocÃª deve corrigir os seguintes erros para continuar:</p>
    <% @rental.errors.full_messages.each do |message| %>
        <div class="alert alert-danger" role="alert"><%= message %></div>
<% end %>

<%= form_with model: @rental, locals: true do |f| %>
    <div class="form-row">
        <div class="form-group col-md-6">
            <%= f.label :start_date, 'Data inicial' %>
			<%= f.date_field :start_date, class: "col" %>
        </div>
        <div class="form-group col-md-6">
           <%= f.label :end_date, 'Data final' %>
			<%= f.date_field :end_date, class: "col" %>
        </div>
        <div class="form-group col-md-6">
            <%= f.label :car_category_id, 'Categoria' %>
    		<%= f.collection_select(:car_category_id, @car_categories, :id, :name, {include_blank: false}, {class: 'custom-select'}) %>
        </div>
        <div class="form-group col-md-6">
            <%= f.label :client_id, 'Cliente' %>
    		<%= f.collection_select(:client_id, @clients, :id, :identification, {include_blank: false}, {class: 'custom-select'}) %>
        </div>
    </div>
    <%= f.submit 'Agendar', class: "btn btn-primary mt-3 float-right" %>
<% end %>