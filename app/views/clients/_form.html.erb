<% if @client.errors.any? %>
    <p>VocÃª deve corrigir os seguintes erros para continuar:</p>
    <% @client.errors.full_messages.each do |message| %>
        <p><%= message %></p>
    <% end %>
<% end %>

<%= form_for @client do |f| %>
  <div class="form-row align-items-center">
    <div class="col-md-4 mt-3">
      <%= f.label :name, 'Nome' %>
      <%= f.text_field :name %>
    </div>
    <div class="col-md-4 mt-3">
		  <%= f.label :cpf, 'CPF' %>
      <%= f.text_field :cpf %>
    </div>
    <div class="col-md-4 mt-3">
		  <%= f.label :email, 'Email' %>
      <%= f.text_field :email %>
    </div>
  </div>
  <%= f.submit 'Enviar', class: "btn btn-primary mt-3 float-right"%>
    
<% end %>