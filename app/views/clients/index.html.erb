<% if @clients.empty? %>
    <p>Nenhum cliente cadastrado</p>
<% end %>

<% @clients.each do |client| %>
    <%= link_to client.name, client, class: "card bg-light mb-3" %>
<% end %>

 <div class="aligned-buttons">
     <%= link_to 'Registrar novo cliente', new_client_path, class: 'btn btn-primary' %>
</div>