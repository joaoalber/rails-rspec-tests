<% if @subsidiaries.empty? %>
    <p>Nenhuma filial cadastrada</p>
<% end %>

 <% @subsidiaries.each do |subsidiary| %>
    <%= link_to subsidiary.name, subsidiary, class: "card bg-light mb-3" %>
<% end %>

 <div class="register-model">
     <%= link_to 'Registrar nova filial', new_subsidiary_path, class: 'btn btn-primary' %>
</div>