<% if @car.errors.any? %>
    <p>VocÃª deve corrigir os seguintes erros para continuar:</p>
    <% @car.errors.full_messages.each do |message| %>
        <div class="alert alert-danger" role="alert"><%= message %></div>
    <% end %>
<% end %>

<%= form_for @car, url: { action: :create_csv } do |f| %>
    <div class="form-row">
        <div class="form-group col-md-5">
            <%= f.label :car_model_id %>
            <%= f.collection_select :car_model_id, @car_models, :id, :name, {include_blank: false}, {class: 'custom-select'} %>
        </div>
        <div class="form-group col-md-5">
            <%= f.label :subsidiary_id %>
            <%= f.collection_select :subsidiary_id, @subsidiaries, :id, :name, {include_blank: false}, {class: 'custom-select'}  %>
        </div>
				<div class="form-group col-md-2">
					<%= f.label :file, 'Arquivo CSV'%>
					<%= f.file_field :file %>
				</div>
    </div>
    <%= f.submit 'Enviar', class: "btn btn-primary mt-3 float-right" %>
<% end %>