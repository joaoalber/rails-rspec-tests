<div class="item-show">	
	<strong><%= CarCategory.human_attribute_name(:name) %>:</strong>
	<%= @car_category.name %>
	<br>
	<strong><%= CarCategory.human_attribute_name(:daily_rate) %>:</strong>
	<%= number_to_currency(@car_category.daily_rate) %>
	<br>
	<strong><%= CarCategory.human_attribute_name(:car_insurance) %>:</strong>
	<%= number_to_currency(@car_category.car_insurance) %>
	<br>
	<strong><%= CarCategory.human_attribute_name(:third_party_insurance) %>:</strong>
	<%= number_to_currency(@car_category.third_party_insurance) %>
	<br>
</div>

<div class="icons-show">
	<div class="single-icon">
		<%= link_to icon('fas', 'pencil-alt', id: 'edit'), edit_car_category_path(@car_category), class: 'btn btn-warning' %>
	</div>
	<div class="single-icon">	
		<%= link_to icon('fas', 'trash-alt', id: 'delete'), @car_category,  method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn btn-danger' %>
	</div>
</div>

<hr>
<div class="aligned-buttons">
	<%= link_to 'Voltar', root_path, class: 'btn btn-primary' %>
</div>