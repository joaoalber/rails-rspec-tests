<% if @car_model.errors.any? %>
    <p>VocÃª deve corrigir os seguintes erros para continuar:</p>
    <% @car_model.errors.full_messages.each do |message| %>
        <p><%= message %></p>
    <% end %>
<% end %>

<%= form_for @car_model do |f| %>
    <div class="form-row align-items-center">
        <div class="col-md-4 mt-3">
            <%= f.label :name, 'Nome' %>
            <%= f.text_field :name %>
        </div>
        <div class="col-md-4 mt-3">
            <%= f.label :year, 'Ano' %>
            <%= f.text_field :year %>
        </div>
        <div class="col-md-4 mt-3">
            <%= f.label :motorization, 'Cavalos' %>
            <%= f.text_field :motorization %>
        </div>
        <div class="col-md-4 mt-3">
            <%= f.label :manufacturer_id, 'Fabricante' %>
            <%= f.collection_select :manufacturer_id, @manufacturers, :id, :name %>
        </div>
        <div class="col-md-4 mt-3">
            <%= f.label :car_category_id, 'Categoria' %>
            <%= f.collection_select :car_category_id, @car_categories, :id, :name  %>
        </div>
        <div class="col-md-4 mt-3">
            <%= f.label :fuel_type, 'Combustivel' %>
            <%= f.text_field :fuel_type %>
        </div>
    </div>
    <%= f.submit 'Enviar', class: "btn btn-primary mt-3 float-right" %>
<% end %>